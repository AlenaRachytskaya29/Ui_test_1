import time
from selenium import webdriver
from selenium.webdriver.common.by import By

driver = webdriver.Chrome()

driver.get('http://www.google.com/')

time.sleep(5)

search_box = driver.find_element(By.NAME, "q")  # Ищем поле ввода

search_box.send_keys('Существует ли Дед Мороз?')  # Вводим запрос

search_box.submit()

time.sleep(10)

driver.save_screenshot('result.png')  # Сохраняем скриншот нашего результата

driver.quit()
